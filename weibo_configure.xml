<root>
	<crawl_type user="true" search="false">抓取模式, user=true会抓取user_list中的微博，search=true会抓取微博搜索内容</crawl_type>
	<!--user的情况下-->
	<user_list>		<!--地址预处理-->
		<start_url>http://weibo.com/163music</start_url>
		<start_url>http://weibo.com/u/3172190991?from=feed&amp;loc=nickname</start_url>
	</user_list>
	<!--search的情况下-->
	<keywords_list>
		<keywords>任立翔</keywords>
		<keywords>网络爬虫</keywords>
	</keywords_list>

	<!--需要提取的微博信息-->
	<user_info>true</user_info> <!--博主基本资料-->
	<follow_list>true</follow_list> <!--博主关注列表-->
	<fans_list>true</fans_list> <!--博主粉丝列表-->
	<weibo_list>true</weibo_list> <!--博主微博正文-->
	<!--可以考虑增加一些高级用法,比如获取粉丝的微博指定递归层级之类的-->

</root>
